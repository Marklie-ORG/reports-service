{
  "name": "reports-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npx swc --strip-leading-paths --config-file .swcrc ./src -d dist",
    "prettier:format": "pnpm exec prettier . --write",
    "prettier:check": "npx prettier . --check\n",
    "docker:up": "docker compose -f ../docker/compose.yaml up -d",
    "generate:dts": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "npm run build && npm run generate:dts",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "watch": "pnpm docker:up & npx nodemon --config ./nodemon.json",
    "start:dev": "npm run watch"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "@koa/cors": "^5.0.0",
    "@mikro-orm/migrations": "^6.4.15",
    "axios": "^1.8.4",
    "bullmq": "^5.48.1",
    "cronstrue": "^3.1.0",
    "dotenv": "^16.5.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "marklie-ts-core": "1.4.37",
    "p-limit": "^6.2.0",
    "puppeteer": "^24.6.1",
    "winston": "^3.17.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^5.0.0",
    "@types/node": "^22.10.10",
    "koa": "3.0.1",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^13.0.1",
    "prettier": "3.4.2",
    "typescript": "^5.7.3"
  }
}
